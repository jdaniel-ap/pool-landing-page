---
import MenuOptions from "../molecules/MenuOptions.astro";
import SocialMedia from "../molecules/SocialMedia.astro";
---

<header
  class="h-16 flex justify-between items-center px-4 py-10 md:px-40 z-10 border-gray-200 border-b-[1px] sticky top-0 bg-white"
>
  <a href="/" class="cursor-pointer font-bold text-2xl">
    <div class="flex items-center gap-1">
      <img src="/bennu.svg" class="size-14 lg:size-12" />
      <div>
        <p class="font-bold">Grupo Bennu</p>
        <p class="text-xs">Soluciones integrales</p>
      </div>
    </div>
  </a>
  <MenuOptions />
  <SocialMedia />
</header>
